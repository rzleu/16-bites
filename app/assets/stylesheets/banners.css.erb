.splash--section-three {
  grid-row: 1/50;
  background: url(<%= asset_path 'banner_three.webp' %>) 35% 0% / cover no-repeat;
}

.splash--section-five-banner {
  background: url(<%= asset_path 'banner_four.webp' %>) 25% 75% / cover no-repeat;
}

.splash--section-six-banner {
  background: url(<%= asset_path 'banner_five.webp' %>) center/ cover no-repeat;
}

.splash--section-seven-banner {
  background: url(<%= asset_path 'banner_six.webp' %>) center/ cover no-repeat;
}

.splash--section-eight-banner {
  background: url(<%= asset_path 'banner_seven.webp' %>) center/ cover no-repeat;
}

.background {
  background-image: linear-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0)), url(<%= asset_path 'splash.webp' %>);
  background-size: cover;
  background-position: center center;
  max-height: 65vh;
  width: 100%;
  position: relative;
}

.splash--curve-yellow {
  background-image: url(<%= asset_path 'yellow-divider.svg' %>);
  background-position: right;
  background-repeat: no-repeat;
  bottom: -4%;
  min-height: 400px;
  width: 100%;
  position: absolute;
  z-index: -1;
}